<article class="post">
  <div class="title">
    <h1>{{post.title}}</h1>
  </div>
  <div class="meta">
    Written by {{post.user.username}} on
    {{format_date post.created_at}}
    |
    <div class="text">
      {{post.contents}}
    </div>
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{!-- comment form only renders if user is logged in --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}