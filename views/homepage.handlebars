<div>
<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <h1>{{post.title}}</h1>
      </div>
      <div class="meta">
        Written by {{post.user.username}} on
        {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
</div>